{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/en/categories/:category/posts/:post",
        "destination": "/posts/:post",
        "type": 301
      },
      {
        "source": "/ru/categories/:category/posts/:post",
        "destination": "/posts/:post",
        "type": 301
      },
      {
        "source": "/en/:path*",
        "destination": "/:path*",
        "type": 301
      },
      {
        "source": "/ru/:path*",
        "destination": "/:path*",
        "type": 301
      }
    ],
    "headers": [{
      "source": "**/*.@(jpg|jpeg|gif|png|css|js|svg|ttf|woff2|webp|eot|woff)",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=15552000"
      }]
    }, {
      "source": "404.html",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=15552000"
      }]
    }],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
